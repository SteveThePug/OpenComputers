local component = require("component")
local os = require("os")
local gpu = component.gpu

function clear()
	local w, h = gpu.getResolution()
	gpu.fill(1, 1, w, h, " ")
	gpu.set(w,h,"")
end

function locate()
	for address, _ in component.list("nc_fission_reactor") do
		print("Found reactor at: ")
		print(address)
		return address
	end
end

function over(energy)
	if energy > 100000 then
		return true
	else
		return false
	end
end

address = locate()
reactor = component.proxy(address)
while not stopping do
	energy = reactor.getEnergyStored()
	clear()
	if over(energy) then
		reactor.deactivate()
		print("high")
		print(energy)
		os.sleep(1)
	else
		reactor.activate()
		print("low")
		print(energy)
		os.sleep(1)
	end
end
