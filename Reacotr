local component = require("component")
local os = require("os")

function locate()
	for address, _ in component.list("nc_fission_reactor") do
		print("Found reactor at: ")
		print(address)
		return address
	end
end

function over(energy)
	if energy > 10000 then
		return true
	else
		return false
	end
end

address = locate()
reactor = component.proxy(address)
while not stopping do
	energy = reactor.getEnergyStored()
	if over(energy) then
		reactor.deactivate()
		os.sleep(3)
		print("high")
	else
		reactor.activate()
		os.sleep(3)
		print("low")
	end
end