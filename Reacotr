local component = require("component")
local os = require("os")

function locate()
	for address, _ in component.list("nc_fission_reactor") do
		print("Found reactor at: ")
		print(address)
		return address
	end
end

function over(energy)
	if energy > 10000 then
		reactor.deactivate()
	else
		reactor.activate()
	end
end

address = locate()
local reactor = component.proxy(address)
while not stopping do
	energy = reactor.getEnergyStored()
	over(energy)
end